<%= form_for @poi, :html => {:multipart => true} do |f| %>
<% if @poi.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@poi.errors.count, "error") %> prohibited
	this post from being saved:</h2>
	<ul>
		<% @poi.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<table width="100%" id="edit-content">
	<tr>
		<td><h3>Details</h3></td>
	</tr>
	<tr>
		<td>
		<div id="file_div">
			<%= image_tag @poi.image.url(:thumbnail), width: "250px", class:"post-image"%>
			<br/>
			<br/>
			<%= f.file_field :image%>
			<br/>
			<br/>
			<%= f.check_box(:image_delete)%> <%= f.label :Delete_Image?%>
		</div></td>

		<td>
		<div>
			<%= f.label :title %>
			<br>
			<%= f.text_field :title %>
		</div>
		<br />
		<div>
			<%= f.label :description %>
			<br>
			<%= f.text_area :description, :cols => "50", :rows =>"10" %>
		</div></td>
		<td valign="top" width="200px" align="center">
		<div>
			<%= f.label :longitude %>
			<br>
			<%= f.text_area :longitude, :cols => "5", :rows =>"1" %>
		</div>
		<div>
			<%= f.label :latitude %>
			<br>
			<%= f.text_area :latitude, :cols => "5", :rows =>"1" %>
		</div></td>
	</tr>

	</div>

	<tr>
		<td>
		<br/>
		<div>
			<%= f.submit "Update"%>
		</div></td>
	</tr>
</table>

<% end %>
<script>
	function clearFileInputField(tagId) {
		document.getElementById(tagId).innerHTML = document.getElementById(tagId).innerHTML;
	}
</script>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<% if user_signed_in? %>
<br/>
<%= link_to 'Create Point', new_poi_path, class: "button-link", id: "main_create_point" %>
<br/>
<% end %>

<br/>

<h1>Points</h1>
<hr/>
<div id="directions"></div>

<hr/>
<div class="contant-wrapper-min-width">
<table id="index_post_table" width="100%">

	<% @pois.each do |poi| %>
	<tr class="posts" id="post-content-row">
		<td class="posts" id="post_image"><%= image_tag poi.image.url(:thumbnail),  class:"post-image", width:"250px"%></td>

		<td class="posts" id="post-content"> <table width="100% height="100%">
		<tr>
		<td> <%= link_to '', poi_path(poi), class: "edit-button", Id:"delete",
		method: :delete, data: { confirm: 'Are you sure?' } unless (current_user.nil? || !(current_user.id == poi.user_id || (current_user.role == "Admin"))) %>
		<%= link_to '', new_poi_image_path(poi), class: "edit-button", Id:"add-image-button" unless current_user.nil? || current_user.id != poi.user_id %>
		<%= link_to '', edit_poi_path(poi), class: "edit-button", Id:"edit" unless current_user.nil? || current_user.id != poi.user_id %>
		<div id="post_title">
		<%= link_to poi.title, poi_path(poi), class:"post-link", 'data-no-turbolink' => true %>
		</div></td>
		</tr>
		<tr>
		<td>
		</tr>

		<tr>
		<td>
		<p class="description">
		<strong><%= poi.description %></strong>
		</p></td>
		</tr>

		<tr>
		<td>
		<p>
		<%= link_to User.find(poi.user_id).first_name + " " + User.find(poi.user_id).last_name, user_summary_path(poi.user_id), class:"artist-link"%>
		</p></td>
		</tr>
		</table></td>

		<td class="posts" id="post_map" width="15%"><br> Created:<br/> <%=(poi.created_at.to_formatted_s(:short) )%> <br/><br/> Updated:<br/> <%=poi.updated_at.to_formatted_s(:short)%> <br/><br/><%=(Comment.where("poi_id = ?", poi.id)).count%> comments</td>

		</td>
	</tr>
	<% end %>
</table>
</div>

<hr />
<h1>&nbsp;</h1>
<br/>
<script type="text/javascript">
	handler = Gmaps.build('Google');
handler.buildMap({ provider: {scrollwheel: false, zoom: 5}, internal: {id: 'directions'}}, function(){
markers = handler.addMarkers(<%= raw @hash.to_json %>
	);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
});
</script>
